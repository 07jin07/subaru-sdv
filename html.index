    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const slides = document.querySelectorAll('.slide');
            const prevBtn = document.getElementById('prevBtn');
            const nextBtn = document.getElementById('nextBtn');
            const slideCounter = document.getElementById('slideCounter');
            let currentSlide = 0;
            const totalSlides = slides.length;

            function showSlide(index) {
                slides.forEach((slide, i) => {
                    slide.classList.toggle('active', i === index);
                });
                slideCounter.textContent = `${index + 1} / ${totalSlides}`;
                currentSlide = index;
            }

            function nextSlide() {
                let next = currentSlide + 1;
                if (next < totalSlides) {
                   showSlide(next);
                }
            }

            function prevSlide() {
                let prev = currentSlide - 1;
                if (prev >= 0) {
                   showSlide(prev);
                }
            }

            nextBtn.addEventListener('click', nextSlide);
            prevBtn.addEventListener('click', prevSlide);
            
            document.addEventListener('keydown', (e) => {
                if (e.key === 'ArrowRight') {
                    nextSlide();
                } else if (e.key === 'ArrowLeft') {
                    prevSlide();
                }
            });

            showSlide(0);

            // スライド3: 車両価値の比較チャート
            const valueCurveCtx = document.getElementById('valueCurveChart');
            if (valueCurveCtx) {
                new Chart(valueCurveCtx, {
                    type: 'line',
                    data: {
                        labels: ['購入時', '1年後', '3年後', '5年後', '7年後', '10年後'],
                        datasets: [{
                            label: '従来のクルマ',
                            data: [100, 80, 60, 45, 30, 20],
                            borderColor: 'rgb(107, 114, 128)',
                            backgroundColor: 'rgba(107, 114, 128, 0.5)',
                            tension: 0.1,
                            borderDash: [5, 5],
                        }, {
                            label: 'SDV (Software-Defined Vehicle)',
                            data: [100, 105, 110, 108, 115, 112],
                            borderColor: 'rgb(0, 51, 102)',
                            backgroundColor: 'rgba(0, 51, 102, 0.5)',
                            tension: 0.1,
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: true,
                        scales: {
                            y: {
                                beginAtZero: false,
                                title: { display: true, text: '車両価値 (購入時=100)' }
                            },
                            x: {
                                title: { display: true, text: '経過年数' }
                            }
                        },
                        plugins: { legend: { position: 'top' } }
                    }
                });
            }
        });
    </script>
